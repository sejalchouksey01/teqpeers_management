<%= form_with model: @course, local: true do |form| %>
  <% if @course.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, 'Course Name', class: 'form-label fw-semibold' %>
    <%= form.text_field :name, class: 'form-control shadow-sm', placeholder: 'Enter course name' %>
  </div>

  <div class="mb-3">
    <%= form.label :description, 'Course Description', class: 'form-label fw-semibold' %>
    <%= form.text_area :description, class: 'form-control shadow-sm', rows: 5, placeholder: 'Enter course description' %>
  </div>

  <%= form.submit form.object.new_record? ? 'Create Course' : 'Update Course', class: "btn #{form.object.new_record? ? 'btn-primary' : 'btn-success'} w-100" %>
<% end %>
