<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg border-0 rounded-lg">
        <div class="card-header bg-primary text-white">
          <h3 class="card-title mb-0 py-2">Create New Course</h3>
        </div>
        <div class="card-body">
          <%= form_with model: @course, local: true do |form| %>
            <div class="mb-3">
              <%= form.label :name, "Course Name", class: "form-label fw-semibold" %>
              <%= form.text_field :name, class: "form-control shadow-sm", placeholder: "Enter course name" %>
            </div>

            <div class="mb-3">
              <%= form.label :description, "Course Description", class: "form-label fw-semibold" %>
              <%= form.text_area :description, rows: 5, class: "form-control shadow-sm", placeholder: "Enter course description" %>
            </div>

            <%= form.submit "Create Course", class: "btn btn-primary w-100" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
