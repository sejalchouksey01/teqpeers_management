<h2 class="text-center text-primary mb-4">Log in</h2>

<div class="container" style="max-width: 400px;">
  <div class="card shadow p-4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
      <!-- Email Field -->
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
      </div>

      <!-- Password Field -->
      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter your password" %>
      </div>

      <!-- Remember Me Checkbox -->
      <% if devise_mapping.rememberable? %>
        <div class="mb-3 form-check">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      <% end %>

      <!-- Submit Button -->
      <div class="d-grid">
        <%= f.submit "Log in", class: "btn btn-success btn-block" %>
      </div>
    <% end %>

    <!-- Devise Links -->
    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
