<div class="container mt-5">
  <div class="row justify-content-center">
    <!-- Left Column for Dashboard Information -->
    <div class="col-md-8">
      <div class="card shadow mb-4">
        <div class="card-header">
          <h4 class="card-title">Dashboard Overview</h4>
        </div>
        <div class="card-body">
          <!-- Displaying Courses List -->
          <h5 class="mt-4">Your Courses</h5>

          <% if current_user.mentor? || current_user.manager? %>
            <!-- Display list of courses if the current user is a mentor -->
            <ul class="list-group">
              <% @courses.each do |course| %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <%= link_to course.name, course_users_path(course_id: course.id), class: 'text-decoration-none' %>
                  <span class="badge bg-info rounded-pill">Description: <%= course.description %></span>
                </li>
              <% end %>
            </ul>

            <div class="d-flex mt-4">
              <%= link_to 'Go to Trainees Attendance List', users_path, class: 'btn btn-primary me-2' %>
              <%= link_to 'Go to Trainees Status', users_path(status: true), class: 'btn btn-primary' %>
            </div>
          <% elsif current_user.courses.any? %>
            <!-- Display the courses for the current user -->
            <ul class="list-group">
              <% current_user.courses.each do |course| %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <%= link_to course.name, course_feedbacks_path(course_id: course.id), class: 'text-decoration-none' %>
                  <span class="badge bg-info rounded-pill">Description: <%= course.description %></span>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p>You are not enrolled in any courses yet.</p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Right Column for Daily Status Form -->
    <% if current_user.role == "trainee" %>
      <div class="col-md-4">
        <div class="card shadow mb-4">
          <div class="card-header">
            <h5 class="card-title">Daily Status</h5>
          </div>
          <div class="card-body">
            <%= form_with url: save_daily_status_path, method: :post, local: true do |form| %>
              <div class="mb-3">
                <%= form.label :content, "Daily Status Content" %>
                <%= form.text_area :content, class: "form-control", rows: 4, placeholder: "Enter your daily status here..." %>
              </div>
              <div class="mb-3">
                <%= form.label :date, "Date" %>
                <%= form.date_field :date, value: Date.today, class: "form-control" %>
              </div>
              <%= form.submit "Save Status", class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
