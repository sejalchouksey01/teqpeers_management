<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg border-0 rounded-lg">
        <div class="card-header text-white py-3" style="background-color: #4a90e2;">
          <div class="d-flex justify-content-between align-items-center">
            <h4 class="card-title mb-0">
              <i class="fas fa-plus-circle me-2"></i>
              New Subtopic for <%= @course.name %>
            </h4>
          </div>
        </div>

        <div class="card-body">
          <%= form_with(model: [@course, @subtopic], local: true) do |form| %>
            <% if @subtopic.errors.any? %>
              <div class="alert alert-danger">
                <h5><i class="fas fa-exclamation-triangle me-2"></i>
                  <%= pluralize(@subtopic.errors.count, "error") %> prohibited this subtopic from being saved:
                </h5>
                <ul>
                  <% @subtopic.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group mb-4">
              <%= form.label :title, class: "form-label fw-semibold" %>
              <%= form.text_field :title, 
                  class: "form-control form-control-lg",
                  placeholder: "Enter subtopic title",
                  required: true 
              %>
            </div>

            <div class="form-group mb-4">
              <%= form.label :description, class: "form-label fw-semibold" %>
              <%= form.text_area :description, 
                  class: "form-control",
                  rows: 5,
                  placeholder: "Enter subtopic description",
                  required: true 
              %>
            </div>

            <div class="form-group d-flex gap-2">
              <%= form.submit "Create Subtopic", class: "btn btn-primary btn-lg" %>
              <%= link_to "Cancel", course_subtopics_path(@course), class: "btn btn-outline-secondary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
